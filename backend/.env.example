# Copy this file to backend/.env and update values for your environment

# Django
DJANGO_SECRET_KEY=replace_with_a_secure_random_key
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# CORS
DJANGO_CORS_ALLOW_ALL_ORIGINS=True
# If DJANGO_CORS_ALLOW_ALL_ORIGINS=False, set explicit origins:
# DJANGO_CORS_ALLOWED_ORIGINS=https://your-frontend-domain

# Database (MySQL default)
DB_ENGINE=django.db.backends.mysql
DB_NAME=eranux
DB_USER=root
DB_PASSWORD=
DB_HOST=127.0.0.1
DB_PORT=3306

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret
